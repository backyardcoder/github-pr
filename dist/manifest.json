{
	"name": "Github Notifier",
	"version": "1.0",
	"manifest_version": 2,
	"author": "Pratik K",
	"description": "Extension for getting important Github notification",
	"homepage_url": "https://github.com/backyardcoder/github-pr",
	"background": {
		"scripts": [
			"/js/background.js"
		],
		"persistent": false
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_title": "Github Notifier",
		"default_popup": "/html/popup.html"
	}
}
